<script type="text/javascript">
$(document).ready(function(){
	$("#activity-comment").clearsearch();
	$("#counter-comments").clearsearch();

	$(".display").click(function(){
		if (editMode){
			$(this).parent().children(".edit").show();
			editedFields++;
			
			if (editedFields>1){
				$("#edited-fields").append(", "+$(this).parent().children(".edit").children("input, textarea").attr("title"));	
			}else{
				$("#edited-fields").append(" "+$(this).parent().children(".edit").children("input, textarea").attr("title"));		
			}
			$(this).hide();
		}
	})
});
var editMode=false;
var editedFields=0;
function counterOffer(){
	editMode=true;
	$(".display").css("border", "1px solid");
	$("#counterMessage").show();
	$(".attach-files").show();
	$("#default-buttons").hide();
	$("#counter-buttons").show();
}
function cancelCounter(){
	editMode=false;
	$(".display").css("border", "none");
	$("#counterMessage").hide();
	$(".attach-files").hide();
	$("#default-buttons").show();
	$("#counter-buttons").hide();
}
</script>

	
